@page "/Usuarios/Editar/{Codigo}"

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
        <h2>Editar Usuario</h2>
        <br />

        <EditForm Model="@user">
            <DataAnnotationsValidator />@*Para mostrar los errores*@
            @*Para registrar Codigo*@
            <div class="form-goup row">
                <label for="Codigo" class="col-sm-2 col-form-label">
                    @*Col=columna sm=tipo de dispositivo 2=num columnas*@
                    Codigo
                </label>
                <div class="col-sm-10">
                    <label for="Codigo" class="col-sm-2 col-form-label">
                        @user.Codigo
                    </label>
                </div>
            </div>
            @*Para registrar el nombre*@
            <div class="form-goup row">
                <label for="Nombre" class="col-sm-2 col-form-label">
                    @*Col=columna sm=tipo de dispositivo 2=num columnas*@
                    Nombre
                </label>
                <div class="col-sm-10">
                    <InputText id="Nombre" class="form-control" @bind-Value="user.Nombre" />
                    <ValidationMessage For="@(()=>user.Nombre)" />
                </div>
            </div>
            @*Para registrar el clave*@
            <div class="form-goup row">
                <label for="Clave" class="col-sm-2 col-form-label">
                    @*Col=columna sm=tipo de dispositivo 2=num columnas*@
                    Clave
                </label>
                <div class="col-sm-10">
                    <InputText id="Clave" type="password" class="form-control" @bind-Value="user.Clave" />
                    <ValidationMessage For="@(()=>user.Clave)" />
                </div>
            </div>
            @*Para registrar el correo*@
            <div class="form-goup row">
                <label for="Correo" class="col-sm-2 col-form-label">
                    @*Col=columna sm=tipo de dispositivo 2=num columnas*@
                    Correo
                </label>
                <div class="col-sm-10">
                    <InputText id="Correo" class="form-control" @bind-Value="user.Correo" />
                    <ValidationMessage For="@(()=>user.Correo)" />
                </div>
            </div>
            @*Para registrar el Rol*@
            <div class="form-goup row">
                <label for="Rol" class="col-sm-2 col-form-label">
                    @*Col=columna sm=tipo de dispositivo 2=num columnas*@
                    Rol
                </label>
                <div class="col-sm-10">
                    <InputSelect class="form-control" @bind-Value="user.Rol">
                        @*ComboBox*@
                        @foreach (var rol in Enum.GetValues(typeof(Roles)))
                        {
                            <option value="@rol">@rol</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="@(()=>user.Rol)" />
                </div>
            </div>
            @*Para registrar el EstaActivo*@
            <div class="form-goup row">
                <label for="EstaActivo" class="col-sm-2 col-form-label">
                    @*Col=columna sm=tipo de dispositivo 2=num columnas*@
                    Esta Activo
                </label>
                <div class="col-sm-10">
                    <InputCheckbox @bind-Value="user.EstaActivo" />
                    <ValidationMessage For="@(()=>user.EstaActivo)" />
                </div>
            </div>

            <div class="form-group row">
                <p>
                    @*Boton de guardar*@
                    <input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
                    @*Boton de Cancelar*@
                    <input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
                    @*Boton de Eliminar*@
                    <input type="submit" class="btn btn-warning" value="Eliminar" @onclick="Eliminar" />
                </p>
            </div>
        </EditForm>
    </Authorized>
</AuthorizeView>
